{
  "rules": {
    "jsx-alignment": false,
    "jsx-boolean-value": false,
    "class-name": true,
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods",
      "ignore-interfaces"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef": [
      true
    ],
    "use-strict": false
  }
}